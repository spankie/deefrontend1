    <div class="container">
      <div class="row" align="center">
        <h1 class="title"><%= title %></h1>
        <p><i class="fa fa-android fa-2x"></i> Welcome to <%= title %></p>
      </div>
      <div class="row">
        <div class="box col-md-4 col-md-offset-4">
          <div class="outter">
            <% name = user.user.split('@')[0] %>
            <img src="http://lorempixel.com/output/people-q-c-100-100-1.jpg" class="image-circle img-responsive center-block"/>
            <p align="center" class="hello"><i class="fa fa-user-circle-o"></i> Hello <%= name %></p>
            
          </div>

          <div class="">
            <form method="POST" action="#">
              <div class="control">
                  <div class="label">Email Address</div>
                  <input name="email" type="text" class="form-control" placeholder="<%= user.user.split('@')[1] || 'example@company.com' %>"/>
              </div>
              
              <div class="control">
                  <div class="label">Password</div>
                  <input name="password" type="password" class="form-control" placeholder="123456"/>
              </div>
              <div align="center" class="control">
                  <button type="submit" class="btn btn-primary" name="submit">LOGIN</button>
              </div>
            </form>
          </div>
        </div>
      </div>
